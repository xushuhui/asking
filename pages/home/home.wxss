.input-container {
    width: 80%;
    margin-top: 20rpx;
  }
  .input-label {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 10rpx;
  }
  .input-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #fff;
    padding: 10rpx 15rpx;
    border-radius: 10rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  }
  input {
    flex: 1;
    border: none;
    outline: none;
    font-size: 14px;
    padding-left: 10rpx;
  }
  .submit-button {
    width: 80%;
    margin-top: 60rpx;
  }
  