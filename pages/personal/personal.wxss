/**profile.wxss**/
.image-container {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-top: 30rpx;
  }
  image {
    width: 100%;
    height: 100%;
  }
  .userInfo {
    font-size: 18px;
    font-weight: bold;
    margin-top: 20rpx;
  }
  .info-container {
    width: 80%;
    background-color: #fff;
    border-radius: 10rpx;
    padding: 20rpx;
    margin-top: 30rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  }
  .info-item {
    font-size: 16px;
    margin-bottom: 10rpx;
  }
  .info-item:last-child {
    margin-bottom: 0;
  }