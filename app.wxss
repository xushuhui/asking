/**app.wxss**/
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    min-height: 100%;
    padding: 50rpx 0;
    box-sizing: border-box;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    background-color: #f5f5f5;
  }
  button {
    background-color: #1aad19;
    color: #fff;
    border: none;
    border-radius: 5rpx;
    padding: 10rpx 30rpx;
    font-size: 16px;
    margin-top: 30rpx;
  }
  input {
    border: 1px solid #d9d9d9;
    border-radius: 5rpx;
    padding: 5rpx 10rpx;
    font-size: 14px;
    width: 80%;
    box-sizing: border-box;
    margin-top: 10rpx;
  }
  picker {
    border: 1px solid #d9d9d9;
    border-radius: 5rpx;
    padding: 5rpx 10rpx;
    font-size: 14px;
    width: 80%;
    box-sizing: border-box;
    margin-top: 10rpx;
  }
  picker-view {
    background-color: #fff;
    border-radius: 5rpx;
    padding: 10rpx;
  }